@model AccountAndPasswordManager.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <i class="fa-solid fa-shield-halved fa-3x text-primary mb-3"></i>
                        <h1 class="h3 mb-3 fw-bold">@ViewData["Title"]</h1>
                        <p class="text-muted">Welcome back to Account and Password Manager</p>
                    </div>

                    <section>
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                                <label asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                    <i class="fa-solid fa-right-to-bracket me-2"></i>Log in
                                </button>
                            </div>

                            <div class="mt-4 text-center">
                                <p class="mb-2">
                                    <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none">Forgot your password?</a>
                                </p>
                                <p class="mb-2">
                                    <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Register as a new user</a>
                                </p>
                                <p class="mb-0">
                                    <a asp-action="ResendEmailConfirmation" asp-controller="Account" class="text-decoration-none">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}