@{
    ViewData["Title"] = "Log out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <i class="fa-solid fa-right-from-bracket fa-3x text-warning"></i>
                    </div>

                    <h1 class="h3 mb-3 fw-bold">@ViewData["Title"]</h1>

                    <p class="text-muted mb-4">
                        You have successfully logged out of the application.
                    </p>

                    <div class="d-grid">
                        <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-lg shadow-sm">
                            <i class="fa-solid fa-right-to-bracket me-2"></i>Log back in
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>