@model AccountAndPasswordManager.Models.ViewModels.ManageIndexViewModel

@{
    ViewData["Title"] = "Confirm email";
    var statusMessage = ViewData["StatusMessage"]?.ToString();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <i class="fa-solid fa-circle-check fa-4x text-success mb-4"></i>
                    <h1 class="h3 mb-4">@ViewData["Title"]</h1>
                    <p class="lead">@statusMessage</p>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-primary mt-3">
                        <i class="fa-solid fa-right-to-bracket me-2"></i>Go to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>