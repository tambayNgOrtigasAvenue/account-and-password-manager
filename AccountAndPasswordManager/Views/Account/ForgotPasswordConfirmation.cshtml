@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <i class="fa-solid fa-envelope-circle-check fa-4x text-success"></i>
                    </div>

                    <h1 class="h3 mb-3 fw-bold">@ViewData["Title"]</h1>

                    <p class="text-muted mb-4">
                        Please check your email to reset your password.
                    </p>

                    <div class="alert alert-info text-start shadow-sm fade show" role="alert">
                        <div class="d-flex">
                            <i class="fa-solid fa-circle-info fa-lg me-3 mt-1"></i>
                            <div>
                                <strong>Note:</strong> If you don't see the email in your inbox, please check your spam or junk folder.
                            </div>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-lg shadow-sm">
                            <i class="fa-solid fa-right-to-bracket me-2"></i>Back to Login
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>