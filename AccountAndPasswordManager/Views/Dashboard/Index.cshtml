@using AccountAndPasswordManager.Models.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "My Vault";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fa-solid fa-shield-halved text-primary"></i> My Vault</h1>
        <div class="btn-group shadow-sm">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalLogin">
                <i class="fa-solid fa-user-lock"></i> Add Login
            </button>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCard">
                <i class="fa-solid fa-credit-card"></i> Add Card
            </button>
            <button type="button" class="btn btn-warning text-dark" data-bs-toggle="modal" data-bs-target="#modalNote">
                <i class="fa-solid fa-note-sticky"></i> Add Note
            </button>
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalPassword">
                <i class="fa-solid fa-key"></i> Add Password
            </button>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="vaultTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="logins-tab" data-bs-toggle="tab" data-bs-target="#logins" type="button" role="tab">
                <i class="fa-solid fa-user-lock me-2"></i>Logins (@Model.Logins.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="cards-tab" data-bs-toggle="tab" data-bs-target="#cards" type="button" role="tab">
                <i class="fa-solid fa-credit-card me-2"></i>Cards (@Model.Cards.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="notes-tab" data-bs-toggle="tab" data-bs-target="#notes" type="button" role="tab">
                <i class="fa-solid fa-note-sticky me-2"></i>Notes (@Model.Notes.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="passwords-tab" data-bs-toggle="tab" data-bs-target="#passwords" type="button" role="tab">
                <i class="fa-solid fa-key me-2"></i>Passwords (@Model.Passwords.Count)
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 border border-top-0 bg-white rounded-bottom shadow-sm" id="vaultTabsContent">
        
        <!-- Logins Tab -->
        <div class="tab-pane fade show active" id="logins" role="tabpanel">
            @if (!Model.Logins.Any()) { 
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-user-lock fa-3x mb-3 opacity-25"></i>
                    <p>No logins saved yet.</p>
                </div>
            }
            <div class="row g-3">
                @foreach (var item in Model.Logins)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm hover-shadow transition-all">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">@item.Title</h5>
                                <h6 class="card-subtitle mb-3 text-muted"><i class="fa-solid fa-user me-1"></i> @item.EncryptedUsername</h6>
                                <p class="card-text small text-truncate"><i class="fa-solid fa-link me-1"></i> @item.Website</p>
                                <hr/>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalEditLogin_@item.LoginInformationId"><i class="fa-solid fa-pen"></i> Edit</button>
                                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteLogin_@item.LoginInformationId"><i class="fa-solid fa-trash"></i></button>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary"><i class="fa-regular fa-copy"></i> Copy</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="modalEditLogin_@item.LoginInformationId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditLogin" method="post">
                                    <input type="hidden" name="LoginInformationId" value="@item.LoginInformationId" />
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">Edit Login</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3"><label class="form-label">Title</label><input name="Title" class="form-control" value="@item.Title" required /></div>
                                        <div class="mb-3"><label class="form-label">Username</label><input name="Username" class="form-control" value="@item.EncryptedUsername" required /></div>
                                        <div class="mb-3"><label class="form-label">Password</label><input name="Password" class="form-control" value="@item.EncryptedPasswordHash" required /></div>
                                        <div class="mb-3"><label class="form-label">Website</label><input name="Website" class="form-control" value="@item.Website" /></div>
                                        <div class="mb-3"><label class="form-label">Description</label><textarea name="Description" class="form-control">@item.Description</textarea></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Delete Modal -->
                    <div class="modal fade" id="modalDeleteLogin_@item.LoginInformationId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="DeleteLogin" method="post">
                                    <input type="hidden" name="id" value="@item.LoginInformationId" />
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Delete Login?</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete <strong>@item.Title</strong>? This action cannot be undone.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Cards Tab -->
        <div class="tab-pane fade" id="cards" role="tabpanel">
            @if (!Model.Cards.Any()) { 
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-credit-card fa-3x mb-3 opacity-25"></i>
                    <p>No cards saved yet.</p>
                </div>
            }
            <div class="row g-3">
                @foreach (var item in Model.Cards)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-start border-4 border-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="card-title fw-bold">@item.CardName</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalEditCard_@item.CardDetailsId">Edit</a></li>
                                            <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#modalDeleteCard_@item.CardDetailsId">Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <p class="card-text fs-5 mt-2 mb-1">
                                    **** **** **** @(item.EncryptedCardNumber.Length > 4 ? item.EncryptedCardNumber.Substring(item.EncryptedCardNumber.Length - 4) : item.EncryptedCardNumber)
                                </p>
                                <div class="d-flex justify-content-between text-muted small">
                                    <span>@item.CardNameHolder</span>
                                    <span>Exp: @item.EncryptedExpiryDate</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="modalEditCard_@item.CardDetailsId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditCard" method="post">
                                    <input type="hidden" name="CardDetailsId" value="@item.CardDetailsId" />
                                    <div class="modal-header bg-success text-white">
                                        <h5 class="modal-title">Edit Card</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3"><label class="form-label">Card Name</label><input name="CardName" class="form-control" value="@item.CardName" required /></div>
                                        <div class="mb-3"><label class="form-label">Holder Name</label><input name="CardHolderName" class="form-control" value="@item.CardNameHolder" /></div>
                                        <div class="mb-3"><label class="form-label">Number</label><input name="CardNumber" class="form-control" value="@item.EncryptedCardNumber" required /></div>
                                        <div class="row">
                                            <div class="col-6 mb-3"><label class="form-label">Expiry</label><input name="ExpiryDate" class="form-control" value="@item.EncryptedExpiryDate" required /></div>
                                            <div class="col-6 mb-3"><label class="form-label">CVV</label><input name="CVV" class="form-control" value="@item.EncryptedCvv" required /></div>
                                        </div>
                                        <div class="mb-3"><label class="form-label">Description</label><textarea name="Description" class="form-control">@item.Description</textarea></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="modalDeleteCard_@item.CardDetailsId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="DeleteCard" method="post">
                                    <input type="hidden" name="id" value="@item.CardDetailsId" />
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Delete Card?</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete <strong>@item.CardName</strong>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Notes Tab -->
        <div class="tab-pane fade" id="notes" role="tabpanel">
            @if (!Model.Notes.Any()) { 
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-note-sticky fa-3x mb-3 opacity-25"></i>
                    <p>No notes saved yet.</p>
                </div>
            }
            <div class="row g-3">
                @foreach (var item in Model.Notes)
                {
                    <div class="col-md-4">
                        <div class="card h-100 bg-warning bg-opacity-10 border-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title"><i class="fa-solid fa-thumbtack text-warning me-2"></i>@item.Title</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-link text-dark p-0" data-bs-toggle="dropdown"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalEditNote_@item.NoteId">Edit</a></li>
                                            <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#modalDeleteNote_@item.NoteId">Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <p class="card-text small mt-3" style="white-space: pre-line;">@item.EncryptedContent</p>
                                <div class="text-end mt-2">
                                    <small class="text-muted" style="font-size: 0.75rem;">@item.CreatedAt.ToShortDateString()</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="modalEditNote_@item.NoteId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditNote" method="post">
                                    <input type="hidden" name="NoteId" value="@item.NoteId" />
                                    <div class="modal-header bg-warning text-dark">
                                        <h5 class="modal-title">Edit Note</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3"><label class="form-label">Title</label><input name="Title" class="form-control" value="@item.Title" required /></div>
                                        <div class="mb-3"><label class="form-label">Content</label><textarea name="Content" class="form-control" rows="6" required>@item.EncryptedContent</textarea></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-warning">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="modalDeleteNote_@item.NoteId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="DeleteNote" method="post">
                                    <input type="hidden" name="id" value="@item.NoteId" />
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Delete Note?</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete <strong>@item.Title</strong>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Passwords Tab -->
        <div class="tab-pane fade" id="passwords" role="tabpanel">
            @if (!Model.Passwords.Any()) { 
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-key fa-3x mb-3 opacity-25"></i>
                    <p>No passwords saved yet.</p>
                </div>
            }
            <div class="list-group">
                @foreach (var item in Model.Passwords)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-3 me-3">
                                <i class="fa-solid fa-key text-secondary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@(string.IsNullOrEmpty(item.Description) ? "Untitled Password" : item.Description)</h6>
                                <span class="text-muted small">********</span>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-outline-secondary me-1"><i class="fa-regular fa-copy"></i> Copy</button>
                            <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#modalEditPassword_@item.PasswordId"><i class="fa-solid fa-pen"></i></button>
                            <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalDeletePassword_@item.PasswordId"><i class="fa-solid fa-trash"></i></button>
                        </div>
                    </div>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="modalEditPassword_@item.PasswordId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditPassword" method="post">
                                    <input type="hidden" name="PasswordId" value="@item.PasswordId" />
                                    <div class="modal-header bg-secondary text-white">
                                        <h5 class="modal-title">Edit Password</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3"><label class="form-label">Description</label><input name="Description" class="form-control" value="@item.Description" required /></div>
                                        <div class="mb-3"><label class="form-label">Password</label><input name="PasswordValue" class="form-control font-monospace" value="@item.EncryptedPassword" required /></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-dark">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="modalDeletePassword_@item.PasswordId" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="DeletePassword" method="post">
                                    <input type="hidden" name="id" value="@item.PasswordId" />
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Delete Password?</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete this password?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- ================= CREATE MODALS (Keep Existing) ================= -->

<!-- Modal: Create Login -->
<div class="modal fade" id="modalLogin" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateLogin" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fa-solid fa-user-lock me-2"></i>Add Login</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title</label>
                        <input name="Title" class="form-control" placeholder="e.g. Facebook, Gmail" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username / Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            <input name="Username" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                            <input name="Password" type="password" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Website</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-globe"></i></span>
                            <input name="Website" type="url" class="form-control" placeholder="https://example.com" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea name="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Item</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Create Card -->
<div class="modal fade" id="modalCard" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateCard" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="fa-solid fa-credit-card me-2"></i>Add Payment Card</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Card Name</label>
                        <input name="CardName" class="form-control" placeholder="e.g. Chase Freedom Unlimited" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cardholder Name</label>
                        <input name="CardHolderName" class="form-control" placeholder="Name on card" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Card Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-regular fa-credit-card"></i></span>
                            <input name="CardNumber" class="form-control" placeholder="0000 0000 0000 0000" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold">Expiry (MM/YY)</label>
                            <input name="ExpiryDate" class="form-control" placeholder="MM/YY" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold">CVV</label>
                            <input name="CVV" class="form-control" maxlength="4" placeholder="123" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea name="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Card</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Create Note -->
<div class="modal fade" id="modalNote" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateNote" method="post">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="fa-solid fa-note-sticky me-2"></i>Add Secure Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title</label>
                        <input name="Title" class="form-control" placeholder="e.g. Wi-Fi Password, Secret Code" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Content</label>
                        <textarea name="Content" class="form-control" rows="6" placeholder="Type your secure note here..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Save Note</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Create Password -->
<div class="modal fade" id="modalPassword" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreatePassword" method="post">
                <div class="modal-header bg-secondary text-white">
                    <h5 class="modal-title"><i class="fa-solid fa-key me-2"></i>Add Password</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <input name="Description" class="form-control" placeholder="e.g. Server Root Password" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <div class="input-group">
                            <input name="PasswordValue" type="text" class="form-control font-monospace" placeholder="Enter password" required />
